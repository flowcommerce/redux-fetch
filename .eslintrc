{
  "parser": "babel-eslint",
  "extends": "@flowio/flowio",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "object-curly-newline": ["error", { "consistent": true }],
    "react/require-default-props": "off",
    "react/forbid-prop-types": "off",
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }]
  }
}
